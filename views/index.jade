extends layout

block content
  h1= title
  p Welcome
  if error
    p #{error}
  else
    h1 Folders
    each folder in folders
      - var folderComponents = folder.split('/')
      a(href='/?dir=#{folder}')= folderComponents[folderComponents.length-1]
      br

    h2 Files
    each file in files
      - var fileComponents = file.split('/')
      a(href='/view?path=#{file}')= fileComponents[fileComponents.length-1]
      br